<h1>Create a new portfolio item</h1>

<%= form_for(@portfolio_item) do |item| %>
    <div class="field">
      <%= item.label :title %>
      <%= item.text_field :title %>
    </div>

    <div class="field">
      <%= item.label :subtitle %>
      <%= item.text_field :subtitle %>
    </div>

    <div class="field">
      <%= item.label :body %>
      <%= item.text_area :body, id: :blog_body %>
    </div>

    <div class="actions">
      <%= item.submit %>
    </div>
<% end %>